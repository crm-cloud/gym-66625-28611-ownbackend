# Database
DATABASE_URL="postgresql://username:password@localhost:5432/fitverse?schema=public"

# Server
PORT=3001
NODE_ENV=development

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# CORS
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000"

# Email Service (Primary: SendGrid, Fallback: SMTP)
EMAIL_PROVIDER="sendgrid" # Options: "sendgrid", "smtp"

# SendGrid Configuration
SENDGRID_API_KEY="SG.your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@fitverse.com"
SENDGRID_FROM_NAME="Fitverse"

# SMTP Configuration (Fallback or Alternative)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM_EMAIL="noreply@fitverse.com"
SMTP_FROM_NAME="Fitverse"

# File Storage (Local)
UPLOAD_DIR="uploads"
MAX_FILE_SIZE=10485760 # 10MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp,application/pdf"

# Payment Gateway (Indian - Razorpay/PayU/etc)
RAZORPAY_KEY_ID="rzp_test_..."
RAZORPAY_KEY_SECRET="..."
PAYMENT_WEBHOOK_SECRET="..."
# Add other payment gateway credentials as needed

# Frontend URL (for email links)
FRONTEND_URL="http://localhost:5173"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
